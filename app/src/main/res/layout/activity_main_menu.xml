<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|top"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Image Detector"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/home_button_shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/predict_statues"
                    android:src="@drawable/bust"
                    android:scaleType="centerInside"
                    android:padding="15dp"
                    android:background="@null"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>

                <TextView
                    android:text="Statues"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/home_button_shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/predict_ruins"
                    android:src="@drawable/temple"
                    android:scaleType="centerInside"
                    android:layout_width="180dp"
                    android:padding="15dp"
                    android:background="@null"
                    android:layout_height="180dp"/>

                <TextView
                    android:text="Temples"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:background="@drawable/home_button_shapes"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/chatbot"
                    android:src="@drawable/live_chat"
                    android:scaleType="centerInside"
                    android:padding="30dp"
                    android:background="@null"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>

                <TextView
                    android:text="Chat"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/home_button_shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/predict_temple"
                    android:src="@drawable/ancient_greece"
                    android:scaleType="centerInside"
                    android:layout_width="180dp"
                    android:background="@null"
                    android:layout_height="180dp"/>

                <TextView
                    android:text="Ruines"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




        </LinearLayout>
        <TextView
            android:id="@+id/signOutBtn"
            android:text="Sign Out"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>